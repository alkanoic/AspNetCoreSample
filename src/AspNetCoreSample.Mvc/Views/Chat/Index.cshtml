@{
  ViewData["Title"] = "Chat Page";
}

@section Styles {
  <link rel="stylesheet" href="~/css/chat/styles.css" asp-append-version="true" />
}

@section Scripts {
  <script src="~/js/chat/script.js" asp-append-version="true"></script>
}

<div class="content">
  <h1>ウェブサイトのコンテンツ</h1>
  <p>これはウェブサイトの本文です。右下のチャットボタンをクリックすると、チャットUIが開きます。</p>
  <p>このコンポーネントは画面右下に固定されています。</p>
</div>

<!-- チャットウィジェット -->
<div class="chat-widget">
  <!-- チャットボタン -->
  <button id="chat-toggle-btn" class="chat-toggle-btn">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
      stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
      <path
        d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z">
      </path>
    </svg>
  </button>

  <!-- チャットウィンドウ -->
  <div id="chat-window" class="chat-window hidden">
    <div class="chat-header">
      <div class="chat-title">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
          <path
            d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z">
          </path>
        </svg>
        <h3>チャットサポート</h3>
      </div>
      <button id="chat-close-btn" class="chat-close-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div id="chat-messages" class="chat-messages">
      <div class="message received">
        <div class="message-content">こんにちは！何かお手伝いできることはありますか？</div>
      </div>
    </div>
    <div class="chat-footer">
      <form id="chat-form">
        <input type="text" id="message-input" placeholder="メッセージを入力..." />
        <button type="submit" class="send-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
            <line x1="22" y1="2" x2="11" y2="13"></line>
            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>
